{
    "compilerOptions": {
        "outDir": "./dist/esm",
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "rootDir": "./src",
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./docs/**/*"]
}